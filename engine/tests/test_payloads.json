{
  "metadata_context": {
    "create_schema": {
      "endpoint": "POST /schemas/",
      "description": "Create a new 'Product' entity schema",
      "payload": {
        "entity_name": "Product",
        "description": "A catalogue of items",
        "fields": [
          {
            "name": "sku",
            "field_type": "string",
            "constraints": {
              "min_length": 3,
              "max_length": 20,
              "unique": true
            }
          },
          {
            "name": "price",
            "field_type": "number",
            "constraints": {
              "min_value": 0
            }
          },
          {
            "name": "is_active",
            "field_type": "boolean",
            "default": true
          }
        ]
      }
    },
    "add_field": {
      "endpoint": "POST /schemas/Product/fields",
      "description": "Add 'category' field to Product",
      "payload": {
        "name": "category",
        "field_type": "string",
        "default": "Uncategorized"
      }
    },
    "update_field": {
      "endpoint": "PUT /schemas/Product/fields/price",
      "description": "Update 'price' field constraints",
      "payload": {
        "name": "price",
        "field_type": "number",
        "constraints": {
          "min_value": 0.99,
          "max_value": 10000
        }
      }
    },
    "partial_update_schema": {
      "endpoint": "PATCH /schemas/Product",
      "description": "Update description of Product entity",
      "payload": {
        "description": "Updated Product Catalogue"
      }
    }
  },
  "execution_context": {
    "create_record": {
      "endpoint": "POST /data/Product",
      "description": "Create a valid product record",
      "payload": {
        "sku": "PROD-001",
        "price": 19.99,
        "is_active": true
      }
    },
    "update_record": {
      "endpoint": "PUT /data/Product/{record_id}",
      "description": "Update product price",
      "payload": {
        "sku": "PROD-001",
        "price": 24.99,
        "is_active": true,
        "category": "Electronics"
      }
    },
    "delete_record": {
      "endpoint": "DELETE /data/Product/{record_id}",
      "description": "Soft delete the product record",
      "payload": null
    },
    "duplicate_record": {
      "endpoint": "POST /data/Product",
      "description": "Attempt to create a duplicate product record",
      "payload": {
        "sku": "PROD-001",
        "price": 29.99,
        "is_active": true
      }
    }
  }
}